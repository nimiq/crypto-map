{
  "name": "nimiq-map",
  "version": "2.0.0",
  "description": "A map of locations where you can pay with Crypto around the world",
  "scripts": {
    "dev": "vite",
    "build": "pnpm i18n:extract && pnpm type-check && pnpm build-only",
    "preview": "vite preview --port 4173",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.ts --ignore-pattern dist/ --ignore-pattern '*.config.{js,ts}' --ignore-pattern src/i18n",
    "lint:fix": "eslint . --fix --ext .vue,.js,.ts --ignore-pattern dist/ --ignore-pattern '*.config.{js,ts}' --ignore-pattern src/i18n",
    "story:dev": "pnpm i18n:extract && histoire dev",
    "story:build": "pnpm i18n:extract && histoire build",
    "story:preview": "pnpm i18n:extract && histoire preview",
    "i18n:extract": "node ./node_modules/webpack-i18n-tools/index.js ./src/i18n/en.po",
    "i18n:pull": "tx pull -l de,es,fr,nl,tr,uk --force --minimum-perc 50",
    "i18n:push": "tx push --source",
    "i18n:sync": "pnpm i18n:extract && pnpm i18n:push; pnpm i18n:pull"
  },
  "dependencies": {
    "@fontsource/mulish": "^4.5.14",
    "@googlemaps/js-api-loader": "^1.16.2",
    "@googlemaps/markerclusterer": "^2.4.0",
    "@headlessui/vue": "^1.7.16",
    "@nimiq/utils": "^0.9.2",
    "@nimiq/vue3-components": "github:nimiq/vue3-components#build/full",
    "@turf/bbox-polygon": "^6.5.0",
    "@turf/boolean-point-in-polygon": "^6.5.0",
    "@turf/boolean-within": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "@turf/points-within-polygon": "^6.5.0",
    "@turf/union": "^6.5.0",
    "@types/google.maps": "^3.54.0",
    "@vueuse/components": "^10.4.1",
    "@vueuse/core": "^10.4.1",
    "@vueuse/math": "^10.4.1",
    "@vueuse/router": "^10.4.1",
    "pinia": "^2.1.6",
    "radix-vue": "^0.1.30",
    "supercluster": "^8.0.1",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4",
    "vue-virtual-scroller": "2.0.0-beta.8",
    "vue3-google-map": "0.15.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.40.3",
    "@histoire/plugin-vue": "^0.16.5",
    "@types/grecaptcha": "^3.0.4",
    "@types/supercluster": "^7.1.0",
    "@vitejs/plugin-vue": "^4.3.4",
    "autoprefixer": "^10.4.15",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^9.17.0",
    "histoire": "^0.16.5",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.29",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.3",
    "tailwindcss-nimiq-theme": "^0.2.2",
    "typescript": "5.1.6",
    "vite": "^3.2.7",
    "vite-plugin-rewrite-all": "^1.0.1",
    "vue-tsc": "^1.8.8",
    "webpack-i18n-tools": "github:nimiq/webpack-i18n-tools"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
